<Window x:Class="LibrarySystemWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySystemWPF"
        mc:Ignorable="d"
        Title="Library Management System" 
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource DarkBlueBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="{StaticResource DarkBlueBrush}"
                BorderBrush="{StaticResource CyanAccentBrush}"
                BorderThickness="0 0 1 0">
            <StackPanel>
                <TextBlock Text="Library System" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource LightBlueBrush}"
                           Margin="10 20 10 30"
                           HorizontalAlignment="Center"/>

                <Button Content="Dashboard" Click="Dashboard_Click" FontSize="16"/>
                
                <!-- Admin Only -->
                <Button Content="Manage Users" Click="ManageUsers_Click" FontSize="16"/>
                <Button Content="Manage Books" FontSize="16"/>
                <Button Content="Returns" FontSize="16"/>
                <Button Content="Reports" FontSize="16"/>
                <Button Content="Analysis" FontSize="16"/>

                <!-- General -->
                <Button Content="Chatbot" FontSize="16"/>
                <Button Content="Borrow Books" FontSize="16"/>
                <Button Content="My Books" FontSize="16"/>


                <StackPanel VerticalAlignment="Bottom" Margin="0 25 0 0">
                    <Button Content="My Account" FontSize="14" Background="Transparent" BorderThickness="0"/>
                    <Button Content="Logout" FontSize="14" Background="Transparent" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#0A1429">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#1E3257" Padding="20 10">
                <TextBlock Text="Dashboard" 
                           FontSize="18"
                           Foreground="{StaticResource LightBlueBrush}"/>
            </Border>

            <Frame Grid.Row="1" 
                   Name="MainContentFrame"
                   NavigationUIVisibility="Hidden"
                   Margin="20"
                   Background="Transparent"/>
        </Grid>
    </Grid>
</Window>