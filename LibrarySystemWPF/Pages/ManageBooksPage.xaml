<Page x:Class="LibrarySystemWPF.Pages.ManageBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibrarySystemWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ManageBooksPage">

    <Grid Background="{StaticResource DarkBlueBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Add" Click="BtnAdd_Click" Margin="5" Padding="15 5"
                    Background="{StaticResource CyanAccentBrush}" 
                    Foreground="{StaticResource DarkBlueBrush}"/>
            <Button Content="Edit" Click="BtnEdit_Click" Margin="5" Padding="15 5"
                    Background="{StaticResource CyanAccentBrush}" 
                    Foreground="{StaticResource DarkBlueBrush}"/>
            <Button Content="Delete" Click="BtnDelete_Click" Margin="5" Padding="15 5"
                    Background="{StaticResource CyanAccentBrush}" 
                    Foreground="{StaticResource DarkBlueBrush}"/>
        </StackPanel>

        <!-- Books DataGrid -->
        <DataGrid x:Name="BooksGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False"
                  Background="#1E3257" Foreground="White" RowBackground="#1E3257" 
                  AlternatingRowBackground="#0A1429" HeadersVisibility="Column"
                  IsReadOnly="True" BorderThickness="0" GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Book ID" Binding="{Binding BookID}" Width="1.5*" Foreground="White"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" Foreground="White"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="1.5*" Foreground="White"/>
                <DataGridTextColumn Header="Release Date" Binding="{Binding ReleaseDate, StringFormat=d}" Width="1*" Foreground="White"/>
                <DataGridTextColumn Header="Available" Binding="{Binding BooksAvailable}" Width="0.8*" Foreground="White"/>
                <DataGridTextColumn Header="Borrow Type" Binding="{Binding BorrowTypeDesc}" Width="1.2*" Foreground="White"/>
                <DataGridTextColumn Header="Duration (days)" Binding="{Binding BorrowDuration}" Width="0.8*" Foreground="White"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>